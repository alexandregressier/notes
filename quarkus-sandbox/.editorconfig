root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.*ml]
indent_size = 2
insert_final_newline = false

[*.*sh]
indent_size = 4

[Dockerfile*]
indent_size = 4
